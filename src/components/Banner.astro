---
import { Icon } from "astro-icon/components";
---

<section class="banner full-width">
        <a href="/events/">
            <Icon name="teapot-leaves" size={45} />
            Найближчі події
        </a>
</section>

<style>
	.banner {
		justify-self: end;
		width: fit-content;
		display: inline-flex;
		border-radius: 7vw;
		margin: 1rem 2rem 2rem;
		background-color: light-dark(oklch(81% 0.1 93), var(--background-dark));
		padding: 0.5rem 1rem;
		box-shadow: 0px 5px 20px light-dark(#444343, #f1c481);
		
		a {
			display: inline-flex;
			align-items: center;
			gap: 1rem;
			color: light-dark(oklch(25% 0.0587 150.09), oklch(90% 0.15 136));
			font-size: 1rem;
			font-weight: 500;
			text-align: center;
		}	
	}

    @media screen  and (min-width: 48rem){		
		
		.banner {
			padding: 0.5rem 1.8rem;
			margin: 2rem 4rem 2rem 0; 
			
			a {
				font-size: 1rem;
				gap: 1.5rem;
				transition: all var(--animation-timing) ease-in-out;
			}

			a:hover {
				color: var(--active);
			}
		}
    }
</style>