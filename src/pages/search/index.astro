---
import MainLayout from '../../layouts/MainLayout.astro';

const pageTitle = "Пошук на сайті:"
---

<MainLayout {pageTitle}>
	<div class="container">
		<h1>{pageTitle}</h1>
	</div>
</MainLayout>

<style>
	.container { padding: 3rem 1rem 1rem; }

	@media(min-width: 48rem) {
		.container { padding: 3rem 5rem 1rem; }
		h1 { margin-bottom: 0; }
	}
</style>