---
import BaseHead from '../components/BaseHead.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { pageTitle = "Чайна Хатинка" } = Astro.props;
const description = "про справжній чай, Чайну традицію, чайну церемонію ґунфу ча, Шлях Чаю Ча Дао"
---

<html lang="uk">
	<BaseHead {pageTitle} {description}/>
	<body>
		<Navigation />
		<main class="content-grid" data-pagefind-body>
			<slot />
		</main>
		<Footer />
	</body>
</html>
		
<style>
	main {
		height: 100%;
	}
</style>